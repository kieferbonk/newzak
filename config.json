{
    "app"   : "src",
    "build" : "build",
    "dist"  : "dist",

    "paths" : {
        "scripts": [
          "src/+(app|common)/**/*.module.js",
          "src/+(app|common)/**/*.js",
          "!src/+(app|common)/**/*.spec.js"
        ],
        "templates": [
            "src/app/**/*.tpl.html",
            "src/common/**/*.tpl.html"
        ],
        "sass"   : "src/+(sass|app|common)/**/*.scss",
        "assets" : "src/assets/**",
        "html"   : "src/index.html",
        "tests"  : "src/+(app|common)/**/*.spec.js"
    },

    "vendor_files": {
        "js": [
            "vendor/angular/angular.js",
            "vendor/angular-ui-router/release/angular-ui-router.js",
            "vendor/ng-lodash/build/ng-lodash.js"
        ],
        "css": [
        ],
        "assets": [
            "src/favicon.ico"
        ]
    },

    "mocks": "vendor/angular-mocks/angular-mocks.js"
}
